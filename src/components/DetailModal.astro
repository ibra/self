---
const { title, description, url, delay, target = "_blank" } = Astro.props;
---

<li
  class={`border-2 rounded-md px-5 py-4 mb-4 hover:text-slate-600 hover:border-slate-700 transition-colors animate-fade stagger-${delay} box-border w-full`}
>
  <a
    href={url}
    target={target}
    rel="noreferrer"
    class="block text-left no-underline w-full"
  >
    <h2 class="font-bold text-2xl text-white break-words">{title}</h2>
    <p class="text-lg text-slate-400 break-words overflow-wrap break-word">{description}</p>
  </a>
</li>

